{
  "name": "webpack-4-angular-7-boilerplate",
  "version": "1.0.0",
  "description": "Webpack 4 with Angular 7 boilerplate",
  "author": "Per Olsen",
  "license": "MIT",
  "scripts": {
    "start": "webpack-dev-server --mode development",
    "start-dev": "cross-env NODE_ENV=development webpack-dev-server --config config/webpack.config.dev.js",
    "webpack-prod": "cross-env NODE_ENV=production webpack --mode production",
    "build:prod": "npm run build:clean && ngc && npm run webpack-prod && npm run build:clean",
    "build:clean": "rimraf src/**/*.js src/**/*.js.map src/**/*.ngsummary.json src/**/**/*.ngfactory.ts src/**/*.ngstyle.ts src/**/*.shim.ts",
    "prod": "http-server ./dist -a localhost -p 8022 -o"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/persteenolsen/webpack-4-angular-boilerplate"
  },
  "dependencies": {
    "@angular/animations": "~7.2",
    "@angular/common": "~7.2",
    "@angular/compiler": "~7.2",
    "@angular/compiler-cli": "~7.2",
    "@angular/core": "~7.2",
    "@angular/forms": "~7.2",
    "@angular/http": "~7.2",
    "@angular/platform-browser": "~7.2",
    "@angular/platform-browser-dynamic": "~7.2",
    "@angular/platform-server": "~7.2",
    "@angular/router": "~7.2",
    "@angular/upgrade": "~7.2",
    "classlist.js": "^1.1.20150312",
    "core-js": "~2.6",
    "rxjs": "~6.4",
    "web-animations-js": "^2.3.2",
    "whatwg-fetch": "^3.6.2",
    "zone.js": "~0.8"
  },
  "devDependencies": {
    "@ngtools/webpack": "~7.3",
    "@types/core-js": "~2.5",
    "@types/node": "~10.12",
    "angular-router-loader": "~0.8",
    "angular2-template-loader": "~0.6",
    "awesome-typescript-loader": "~5.2",
    "clean-webpack-plugin": "~0.1",
    "cross-env": "~5.2",
    "css-loader": "~1.0",
    "cssnano": "~4.1",
    "file-loader": "^6.2.0",
    "html-loader": "~0.5",
    "html-webpack-plugin": "~3.2",
    "http-server": "^0.12.3",
    "node-sass": "~4.12",
    "optimize-css-assets-webpack-plugin": "~5.0",
    "path": "^0.12.7",
    "rimraf": "^3.0.2",
    "sass-loader": "~7.1",
    "style-loader": "~0.23",
    "to-string-loader": "~1.1",
    "typescript": "~3.1",
    "uglifyjs-webpack-plugin": "~2.0",
    "url-loader": "^4.1.1",
    "webpack": "~4.29",
    "webpack-cli": "~3.2",
    "webpack-dev-server": "^3.1.14",
    "webpack-merge": "~4.2"
  }
}
